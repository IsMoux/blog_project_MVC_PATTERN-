<div class="author">
    <h1 class="author_header ">Hi,I am Issam.</h1>
    <p class="author__body"> web developer </p>
</div>
<img src="/img/images.jfif" alt="person looking out through window" class="hero-image" width="781" height="400">
<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    <ul class="article-ul">

        <% data.forEach(post => { %>
         
      
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title  %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>

        <% }) %>
        
    </ul>
    <% if (nextPage !==null) { %>
     

    <a href="/?page=<%=nextPage %>" class="pagination">&lt; view older Posts</a>
    <% } %>
</section>